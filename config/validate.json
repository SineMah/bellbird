[
    {
        "name": "mail-template",
        "schema": {
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "sender": { "type": "string"},
                "recipient": { "type": "string"},
                "subject": { "type": "string"},
                "file": { "type": ["string", "null"] },
                "template": { "type": ["string", "null"] },
                "data": { "type": "object" },
                "text": { "type": "string" },
                "useJuice": { "type": "boolean" },
                "useMjml": { "type": "boolean" },
                "useInky": { "type": "boolean" },
                "headers": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 3
                    }
                },
                "files": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": { "type": "string" },
                            "content": { "type": "string" }
                        }
                    }
                }
            },
            "required": [
                "id",
                "sender",
                "recipient",
                "subject",
                "data",
                "file",
                "template"
            ],
            "additionalProperties": false
        }
    },
    {
        "name": "mail-preview",
        "schema": {
            "type": "object",
            "properties": {
                "file": { "type": ["string", "null"] },
                "template": { "type": ["string", "null"] },
                "data": { "type": "object" }
            },
            "required": [
                "data",
                "file",
                "template"
            ],
            "additionalProperties": false
        }
    }
]